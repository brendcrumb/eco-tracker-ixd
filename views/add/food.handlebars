<body style="background-color:#8BD2F0" >
	<div class="jumbotron">
		<h2 class="text-center" style="color:white" >Log Food</h2>
	</div>
	<div class="text-center container">
	<div class="form-group">
		<label for="sel1" style="color:white" >How many times did you eat meat today?</label>
		<br>
		<br>
		<select class="form-control" id="amtmeat" size="4">
				<option>0</option>
				<option>1</option>
				<option>2</option>
				<option>3</option>
			</select>
		</div>
	<br>
	<br>
	<div class="btncontainer" style="text-align:center">
		<button style="background-color:#6FBF5F" type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="updateFood()">
			Save
		</button>
		  <button type="button" class="btn btn-light" data-toggle="modal" data-target="#cancelModal">
		    Cancel
		  </button>
		<div class="modal" id="myModal">
			<div class="modal-dialog">
				<div class="modal-content">

						<!-- Modal Header -->
						<div class="modal-header">
							<h4 class="modal-title">Progress Saved!</h4>
							<button type="button" class="close" data-dismiss="modal">&times;</button>
						</div>

						<!-- Modal body -->
						<div class="modal-body">
							Your food intake has been recorded! You can either see your updated summary or add more progress.
						</div>

						<!-- Modal footer -->
						<div class="modal-footer">
							<a href="index" class="btn btn-success" role="button">To Summary</a>
							<a href="addpage" class="btn btn-secondary" role="button">Add More</a>
							<!--
							<button type="button" class="btn btn-success" data-dismiss="modal">To Summary</button> -->
						</div>

					</div>
				</div>
			</div>
			<!-- This is the cancel modal -->
		  <div class="modal" id="cancelModal">
		    <div class="modal-dialog">
		      <div class="modal-content">

		        <!-- Modal Header -->
		        <div class="modal-header">
		          <h4 class="modal-title">Confirm Cancel</h4>
		          <button type="button" class="close" data-dismiss="modal">&times;</button>
		        </div>

		        <!-- Modal body -->
		        <div class="modal-body">
		          Are you sure you want to cancel your progress? Nothing will be saved.
		        </div>

		        <!-- Modal footer -->
		        <div class="modal-footer">
		          <a href="addpage" class="btn btn-success" role="button">I'm sure!</a>
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Nevermind!</button>

		          <!--
		          <button type="button" class="btn btn-success" data-dismiss="modal">To Summary</button> -->
		        </div>

		      </div>
		    </div>
		  </div>
		</div>

	<script>
		function updateFood(){
			var input = $('#amtmeat option:selected').text();
			console.log(input);
			input = input.replace(/[^\d.-]/g, '');
			sessionStorage.setItem('food', input);
			var updates = 1;
			sessionStorage.setItem('updating', updates);
}
	</script>
