	<script src="js/facebook.js"></script>
    <style>
        #login{
            /*color: white;*/
        }
    </style>
</head>
<body style="background-color:#fafafa">

		<div id="loader-wrapper">
			<div id="loader">
				<img class="flatperson" src="flat-person.png" style="height:400px;width:400px">
			</div>
			<div class="loader-section section-left"></div>
			<div class="loader-section section-right"></div>
		</div>

    <div class="wrap intro">
        <form class="login-form">
            <div class="form-header">
                <img src="logo.png" style="width:200px;height:40px;">
                <p>Helping you lower Emissions!</p>

            </div>

            <div class="input">
                <input type="text" class="form-input" placeholder="email">
            </div>

            <div class="input">
                <input type="password" class="form-input" placeholder="password">
            </div>

            <div class="input">
                <a href="/index" class="form-button" id = "login" style="color:#6FBF5F" type="submit">Login</a>
            </div>

            	<div>
            	<p class= "image-center">
            		Login through FB
				<fb:login-button
                    width="200px"
  					scope="public_profile,email"
  					onlogin="checkLoginState();"
  					onlogin="window.location='/index.handlebars'">
				</fb:login-button>
				</p>
				</div>
        </form>
    </div>

		<script src="loadscreen.js"></script>

</body>
